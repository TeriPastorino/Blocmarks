<h1>Topics#new</h1>
<p>Find me in app/views/topics/new.html.erb</p>

<h1>New Topic</h1>

<div class="row">
  <div class="col-md-8">
    <%= form_for @topic do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', placeholder: "Enter topic name" %>
      </div>
       <%= f.submit "Save", class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
