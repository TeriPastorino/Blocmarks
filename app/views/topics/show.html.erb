<h1><%= @topic.title %></h1>
<p>Find me in app/views/topics/show.html.erb</p>

<div class="col-md-4">
<% if policy( @topic ).update? %>
  <%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-success' %>
  <% end %>
  


<% if policy( @topic ).destroy? %>
    <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', date: { confirm: "Are you sure you want to delete this Topic?"} %>
  <% end %>
  

</div>
</div>