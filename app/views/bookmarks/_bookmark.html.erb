<%= content_tag :div, class: "col-sm-6 col-md-3", id: "bookmark-#{bookmark.id}" do %>
  <div class="thumbnail">
    <div>
      <h4>
        <%= truncate(bookmark.display.title, length: 35, separator: '') %>
      </h4>

        <%= link_to(bookmark.url, target: "_blank") do %>
          <% if bookmark.display.thumbnail_url.present? %>
            <%= image_tag(bookmark.display.thumbnail_url, size: "240") %>
          <% else %>
             <%= bookmark.display.title %> 
          <% end %>
        <% end %>

      <div class="caption-content">
        <ul class="list-inline align-center">
          <% if policy(bookmark).destroy? %>
            <li>
              <%= link_to "Delete", [bookmark.topic, bookmark], method: :delete, remote: true, class: "btn btn-danger btn-xs",data: { confirm: 'Are you sure you want to delete this bookmark?' } %>
            </li>
          <% end %>


          <% if policy(bookmark).edit? %>
            <li>
              <%= link_to "Update", edit_topic_bookmark_path(bookmark.topic, bookmark), class: "btn btn-primary btn-xs", remote: true %>
            </li>
            <% end %>

          <li>
            <%= render partial: 'likes/like', locals:{ bookmark: bookmark } %>
          </li>
        </ul>
      </div>
    </div>
  </div>
<% end %>

