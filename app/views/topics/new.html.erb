<h1>Topics#new</h1>
<div class="row">
  <div class="col-md-4">
    <p>Guidelines for topics:</p>
    
  </div>
  <div class="col-md-8">
    <%= form_for @topic do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter topic name" %>
      </div>
      
      
      <%= f.submit "Save", class: 'btn btn-success' %>
    <% end %>
  </div>
</div>

<p>Find me in app/views/topics/new.html.erb</p>
