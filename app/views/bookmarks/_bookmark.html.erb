<div class="col-sm-6 col-md-3">
  <div class="thumbnail align-center">
    <h4>
      <%= truncate(bookmark.display.title, length: 35, separator: '') %>
    </h4>
      <%= link_to(bookmark.url, target: "_blank") do %>
        <%= image_tag(bookmark.display.thumbnail_url, class: "image-responsive", width: 280, height: 280) %>
      <% end %>
    <div class="caption align-center">
      <ul class="list-inline">
        <% if policy(bookmark).destroy? %>
          <li>
            <%= link_to "Delete", [bookmark.topic, bookmark], method: :delete, class: "btn btn-danger btn-xs",data: { confirm: 'Are you sure you want to delete this bookmark?' } %>
          </li>
        <% end %>

        <% if policy(bookmark).edit? %>
          <li>
            <%= link_to "Update", edit_topic_bookmark_path(bookmark.topic, bookmark), class: "btn btn-primary btn-xs", remote: true %>
          </li>
          <% end %>

        <li>
          <%= render partial: 'likes/like', locals:{ bookmark: bookmark } %>
        </li>
      </ul>
    </div>
  </div>
</div>

